{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "outDir": "dist",
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-test", "test", "rollup.config.js"],
  "include": ["package.json", "src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
