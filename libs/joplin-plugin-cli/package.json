{
  "name": "joplin-plugin-cli",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "setup": "yarn build",
    "build": "rimraf dist && esbuild --bundle src/bin.ts --platform=node --outdir=dist --external:esbuild",
    "dev": "esbuild --bundle src/bin.ts --platform=node --outdir=dist --external:esbuild --watch",
    "start": "esno src/bin.ts",
    "docs:server": "live-server docs",
    "docs:dev": "typedoc --watch",
    "docs:build": "rimraf docs && typedoc",
    "docs:deploy": "yarn docs:build && gh-pages -d docs/ -e / -a"
  },
  "workspaces": [
    "templates/*"
  ],
  "bin": {
    "joplin-plugin-cli": "dist/bin.js",
    "jpl": "dist/bin.js"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "dependencies": {
    "esbuild": "^0.12.28"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.20.6",
    "@types/tar": "^4.0.5",
    "chokidar": "^3.5.2",
    "commander": "^7.0.0",
    "esno": "^0.9.1",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.2.3",
    "inquirer": "^8.1.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "tar": "^6.1.11",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "type-fest": "^1.2.1",
    "typedoc": "^0.21.0",
    "typescript": "^4.3.4"
  },
  "sync": [
    "gitignore",
    "jest"
  ]
}
